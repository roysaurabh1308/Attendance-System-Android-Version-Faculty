<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolor"
    android:orientation="vertical"
    tools:context=".takeattendancefinalbyfaculty">

    <include android:id="@+id/final_attendance_page_toolbar"
        layout="@layout/toolbar"/>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/checkable_list"
                        android:layout_width="match_parent"
                        android:layout_height="617dp"
                        android:layout_margin="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/loginapagespinner"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.523"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.496"
                        tools:layout_constraintLeft_creator="1"
                        tools:layout_constraintRight_creator="1"></ListView>

                    <Button
                        android:id="@+id/submitatten_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/loginapagespinner"
                        android:text="Submit Attendance"
                        android:textColor="#070707" />

                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>









</LinearLayout>